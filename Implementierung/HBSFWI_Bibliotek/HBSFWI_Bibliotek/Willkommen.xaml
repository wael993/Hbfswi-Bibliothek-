        <TextBlock x:Name="TB_loading" Grid.Row="2" Text="Loading....." Foreground="#3BB9FF" FontSize="14" FontFamily="Century" VerticalAlignment="Bottom" Margin="0,0,0,30" Height="17"/>
        <TextBlock x:Name="Timer1"   Grid.Row="2" Foreground="#3BB9FF" FontSize="14" FontFamily="Century" VerticalAlignment="Bottom" Margin="80,0,237,30" Height="17"/>
        <ProgressBar  Grid.Row="2" Background="#3BB9FF" x:Name="pro" Height="6" Value="0" Minimum="0" Maximum="100" IsIndeterminate="False" Margin="20,35,20,0"></ProgressBar>

    </Grid>
</Window>
